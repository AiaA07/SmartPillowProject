<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_box="all">

        <ScrollView
            android:id="@+id/stats_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep Statistics"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Tracking Controls Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="#2E7D32">

                        <!-- Tracking Status -->
                        <TextView
                            android:id="@+id/tracking_status_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="READY TO TRACK"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="4dp" />

                        <!-- Session Timer -->
                        <TextView
                            android:id="@+id/session_timer_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginBottom="6dp"
                            android:visibility="gone" />

                        <!-- Start/Stop Buttons (stacked vertically on watch) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <Button
                                android:id="@+id/start_tracking_btn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginBottom="4dp"
                                android:background="#4CAF50"
                                android:text="Start Tracking"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/stop_tracking_btn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:text="Stop Tracking"
                                android:textColor="#FFFFFF"
                                android:background="#F44336"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Summary Cards (now vertical instead of horizontal) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Sleep Duration Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:background="#E3F2FD">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sleep Time"
                                android:textSize="14sp"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/sleep_duration_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7h 23m"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Sleep Quality Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:background="#E8F5E8">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sleep Quality"
                                android:textSize="14sp"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/sleep_quality_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="82%"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Heart Rate Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:background="#FFEBEE">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Avg Heart Rate"
                                android:textSize="14sp"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/heart_rate_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="58 bpm"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Sleep Stages Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Sleep Stages"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Deep Sleep -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Deep"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <ProgressBar
                                android:id="@+id/deep_sleep_bar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="0dp"
                                android:layout_height="12dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:progress="15"
                                android:progressTint="#1976D2" />

                            <TextView
                                android:id="@+id/deep_sleep_text"
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:text="15%"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:gravity="end" />
                        </LinearLayout>

                        <!-- Light Sleep -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Light"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <ProgressBar
                                android:id="@+id/light_sleep_bar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="0dp"
                                android:layout_height="12dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:progress="60"
                                android:progressTint="#4CAF50" />

                            <TextView
                                android:id="@+id/light_sleep_text"
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:text="60%"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:gravity="end" />
                        </LinearLayout>

                        <!-- REM Sleep -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="REM"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <ProgressBar
                                android:id="@+id/rem_sleep_bar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="0dp"
                                android:layout_height="12dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:progress="20"
                                android:progressTint="#7B1FA2" />

                            <TextView
                                android:id="@+id/rem_sleep_text"
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:text="20%"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:gravity="end" />
                        </LinearLayout>

                        <!-- Awake -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="Awake"
                                android:textColor="#000000"
                                android:textSize="12sp" />

                            <ProgressBar
                                android:id="@+id/awake_bar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="0dp"
                                android:layout_height="12dp"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:progress="5"
                                android:progressTint="#F44336" />

                            <TextView
                                android:id="@+id/awake_text"
                                android:layout_width="36dp"
                                android:layout_height="wrap_content"
                                android:text="5%"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:gravity="end" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Recent Data Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Recent Data"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recent_data_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="2dp"
                            android:text="Loading sleep data..."
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation (compact) -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:elevation="4dp">

            <LinearLayout
                android:id="@+id/home_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/home_Btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Home"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stats_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/stats_Btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Stats"
                    android:src="@drawable/stats" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stats"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tracking_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/tracking_Btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Tracking"
                    android:src="@drawable/alarm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tracking"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_tab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/profile_Btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Profile"
                    android:src="@drawable/profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.wear.widget.BoxInsetLayout>