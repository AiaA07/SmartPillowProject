<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:padding="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_box="all">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Top bar with Back button -->
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="â† Back"
                android:textSize="14sp"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="4dp" />

            <!-- Profile header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <!-- Profile picture -->
                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_android_black_24dp"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="6dp"
                    android:contentDescription="Profile picture"
                    android:adjustViewBounds="true" />

                <Button
                    android:id="@+id/changePhotoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Change Photo"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <!-- Name -->
                <TextView
                    android:id="@+id/profileNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ana Batdelger"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/profileEmailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="ana@example.com"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <!-- Sleep goal -->
                <TextView
                    android:id="@+id/profileSleepGoalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep goal: 8 hours/day"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Stats row: last night, average, streak in one line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/lastNightTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last: -- hrs"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/avgSleepTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Avg: -- hrs"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/streakTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Streak: --"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Section title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Sleep Tools"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <!-- Sleep Summary row (clickable) -->
            <LinearLayout
                android:id="@+id/sleepSummaryRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="4dp"
                android:elevation="1dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep Summary"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:textSize="11sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Sleep History row -->
            <LinearLayout
                android:id="@+id/sleepHistoryRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="4dp"
                android:elevation="1dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep History"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Past logs"
                    android:textSize="11sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Settings row -->
            <LinearLayout
                android:id="@+id/settingsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:elevation="1dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    android:textSize="11sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Sleep Goal Progress Card -->
            <LinearLayout
                android:id="@+id/sleepGoalCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/sleepGoalProgressTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep Goal Progress"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/sleepGoalProgressLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0% of goal reached"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/sleepGoalProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="0" />

            </LinearLayout>

            <!-- Weekly Summary Card (condensed) -->
            <LinearLayout
                android:id="@+id/weeklySummaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/weeklySummaryTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Week's Sleep"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/weeklyTotalSleepTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: -- hrs"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/weeklyAverageSleepTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg: -- hrs"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/weeklyBestNightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best: -- hrs"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Edit Profile button -->
            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Edit Profile"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <!-- Logout button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Log out"
                android:backgroundTint="#E53935"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>