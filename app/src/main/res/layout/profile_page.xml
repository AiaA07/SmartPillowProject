<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F3F4F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Profile picture -->
            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_android_black_24dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:contentDescription="Profile picture"
                android:padding="8dp"
                android:adjustViewBounds="true" />


            <!-- Name -->
            <TextView
                android:id="@+id/profileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ana Batdelger"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/profileEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ana@example.com"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp" />

            <!-- Sleep goal -->
            <TextView
                android:id="@+id/profileSleepGoalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep goal: 8 hours/day"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/lastNightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last night: -- hrs"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/avgSleepTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average sleep: -- hrs"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/streakTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak: -- days"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />


        <!-- Section title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Sleep Tools"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Sleep Summary row -->
        <LinearLayout
            android:id="@+id/sleepSummaryRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleep Summary"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See last night's sleep overview."
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Sleep History row -->
        <LinearLayout
            android:id="@+id/sleepHistoryRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sleep History"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View your past sleep logs."
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Settings row -->
        <LinearLayout
            android:id="@+id/settingsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage your goal and app settings."
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />
        </LinearLayout>


        <!-- Logout button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:backgroundTint="#E53935"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
